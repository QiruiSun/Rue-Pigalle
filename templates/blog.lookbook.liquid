<!-- /templates/blog.lookbook.liquid -->

<div class="main-content">
	<div class="wrapper">
		<div class="lookbook-blog">
			<h1>Lookbooks</h1>
			<p class="blog-header">
				Legendary style takes time and planning - two luxuries that are in short supply. Find inspiration and ideas in our lookbooks and get it right - always - instantly.
			</p>
          {% section 'lookbook' %}
			<div class="grid">
				{% for article in blog.articles %}
					{% if article.image %}
					<div class="full-article grid__item large--one-third medium--one-half small--one-whole">
						{% assign split_title = article.title | split: " - " %}
						{% assign title = split_title | first %}
						{% assign description = split_title | last %}
						<h3 class="title"><a class="" href="{{ article.url }}">{{ title }}</a></h3>
						<p class="description">{{ description }}</p>
						<div class="article lookbook-article">
							<a class="" href="{{ article.url }}">
								<div class="article__featured-image">
									{{ article | img_url: '707x707' | img_tag: article.title }}
								</div>
								<div class="click-to-view">
									Click To View Lookbook
								</div>
							</a>
						</div>
					</div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
</div>		
