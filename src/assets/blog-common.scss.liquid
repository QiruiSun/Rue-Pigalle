
$pink: #F065A4;

// slick styles

.main-content {
    .slick-prev:before {
        {% comment %} content: "<"; {% endcomment %}
    }
    
    .slick-next:before {
        {% comment %} content: ">"; {% endcomment %}
    }

    .slick-dots {
        bottom: 100px;
    }

    .slick-dots li button:before {
        font-size: 12px;

        opacity: 1;
        color: white;

    }

    .slick-dots li.slick-active button:before {
        color: $pink;
    }

}

// end 



.pink-bar {
    border: 4px solid $pink;
    width: 200px;
    
}

.blog-article-block {
    position: relative;

    .article__featured-image {
        img {
           height: 280px;
           width: 409px;
        }
    }
}

.blog-page-banner {
    height: 380px;
    margin-bottom: 50px;
    width: 100%; 
    background-repeat: no-repeat;
    background-size: cover;
    padding-left: 12%;

    h1 {
        margin-top: 40px;
        margin-bottom: 0px;
        color: white;
        font-size: 30px;
        letter-spacing: 0.5px;
        line-height: 1.3;
        font-weight: 500 !important; // only way to overwrite font-weight rules from timbercustom.scss
        width: 35%; // need to adjust this if we decide to change font-size here.
    }

    h3 {
        padding-top: 170px;
        font-size: 13px;
        color: white;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }
}

.adventures-banner.blog-page-banner {
    h1 {
        width: 50%;

        &:last-child {
            margin-top: 0px;
        }
    }
}



.blog-headline {
    text-align: center;
    width: 55%;
    margin: auto;
    margin-bottom: 65px;
    padding-top: 50px;

    h3.deco-headline {
        margin: auto;
        margin-bottom: 20px;
        height: 72px;

        &:before {
            float: none;
            margin: auto;
            background-position-x: center;
            background-size: 55%;
        }
    }

    p {
        font-size: 17px;
        letter-spacing: 0.5px;
        line-height: 24px;
    }

    span {
        font-size: 17px;
        letter-spacing: 0.5px;
        line-height: 24px;
    }
}



.blog__item {
    margin: auto;
    margin-bottom: 50px;
    
    position: relative;
}

.blogs-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}

.hover-view {
    opacity: 0;
    position: absolute;
    top: 0px;
    width: 100%;
    text-align: right;
    height: 100%;

    &:hover {
		opacity: unset;
        background-color: rgba(black, 0.8);
    }
    .pink-bar {
        border: 5px solid $pink;
        width: 75%;
        -webkit-transform: translateX(-30px);
        -moz-transform: translateX(-30px);
        -ms-transform: translateX(-30px);
        transform: translateX(-30px);
        margin-bottom: 40px;
        margin: 70px 0px 40px 0px;
    }
    .hover-content {
        color: white;
        {% comment %} -webkit-transform: translateX(-30px);
        -moz-transform: translateX(-30px);
        -ms-transform: translateX(-30px);
        transform: translateX(-30px); {% endcomment %}

        h2 {
            padding-left: 30%;
            font-size: 17px;
            margin-bottom: 15px;
            text-align: left;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        h3 {
            margin-bottom: 0px;
            text-align: left;
            padding-left: 30%;
            font-size: 13px;
            font-weight: 300;
            letter-spacing: 0.5px;
        }
    }
}

.adventures-banner {
    background-image: url({{ 'adventures-banner' | asset_url }});
    background-position: center;
    background-repeat: no-repeat;
    width: 100%; 
    height: 380px;
}

.post-details-container:last-child {
    margin-bottom: 40px;
}


