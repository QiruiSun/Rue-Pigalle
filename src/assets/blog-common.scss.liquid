
$pink: #F065A4;

// slick styles

.main-content {
    .slick-prev:before {
        {% comment %} content: "<"; {% endcomment %}
    }
    
    .slick-next:before {
        {% comment %} content: ">"; {% endcomment %}
    }

    .slick-dots {
        bottom: 50px;
    }

    .slick-dots li button:before {
        font-size: 12px;

        opacity: 1;
        color: white;

    }

    .slick-dots li.slick-active button:before {
        color: $pink;
    }

}

// end 



.pink-bar {
    border: 4px solid $pink;
    width: 200px;
    
}

.blog-article-block {
    position: relative;

    .article__featured-image {
        img {
            height: 280px;
            width: 100%;
        }
    }
}

.blog-page-banner {
    height: 440px;
    margin-bottom: 50px;
    width: 100%; 
    background-repeat: no-repeat;
    background-size: cover;
    padding-left: 12%;

    h1 {
        margin-top: 50px;
        color: white;
        font-size: 34px;
        font-weight: 500 !important; // only way to overwrite font-weight rules from timbercustom.scss
        width: 35%; // need to adjust this if we decide to change font-size here.
    }

    h3 {
        padding-top: 200px;
        font-size: 20px;
        color: white;
        margin-bottom: 20px;
    }
}

.blog-headline {
    text-align: center;
    width: 55%;
    margin: auto;
    margin-bottom: 80px;

    h3.deco-headline {
        margin: auto;
        margin-bottom: 20px;
        height: 72px;

        &:before {
            float: none;
            margin: auto;
        }
    }
}



.blog__item {
    margin: auto;
    margin-bottom: 50px;
    width: 40%;
    position: relative;
}

.blogs-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}

.hover-view {
    opacity: 0;
    position: absolute;
    top: 0px;
    width: 100%;
    text-align: right;
    height: 100%;

    &:hover {
        opacity: 0.8;
        background-color: black;
    }
    .pink-bar {
        border: 5px solid;
        width: 85%;
        -webkit-transform: translateX(-30px);
        -moz-transform: translateX(-30px);
        -ms-transform: translateX(-30px);
        transform: translateX(-30px);
        margin-bottom: 40px;
        margin: 60px 0px 40px 0px;
    }
    .hover-content {
        color: white;
        width: 85%;
        -webkit-transform: translateX(-30px);
        -moz-transform: translateX(-30px);
        -ms-transform: translateX(-30px);
        transform: translateX(-30px);

        h2 {
            padding-left: 20%;
        }

        h3 {
            margin-bottom: 0px;
        }
    }
}
.events-banner {
    background-image: url({{ 'events-banner' | asset_url }});
    width: 100%; 
    background-repeat: no-repeat;
}


