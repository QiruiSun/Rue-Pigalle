// Make variables out of any settings.
$button-edge-color: {{ settings.hero_button_edge_color }};
$banner-image-url: url({{ 'banner.jpg' | asset_url }});
$banner-image-url-mobile: url({{ 'banner-mobile.jpg' | asset_url }});

// Default Values (will be used in desktop version unless overridden by mobile or tablet)
section.banner {
  // Edges
	padding-top: 0;
  // Text
  font-family: "sofia-pro", "HelveticaNeue", "Helvetica Neue", Arial, sans-serif;
  font-weight: 200;
  letter-spacing: 0.03em;
  margin-bottom: {{settings.shopTheLookBannerDistance}}px;

  div.slide {
    // Edges
    padding: 50px;
    // Size
    width: 100%;
    margin-top: 100px;
    // height: 580px;
    // Background
    background-image: $banner-image-url;
    background-repeat: no-repeat;
    background-color: rgba(244, 242, 243, 1.0);
    background-size: cover;
    background-position-x: center;
    background-position-y: top;
    text-align: center;

    h2.heading {
      // Position
      display: block;
      z-index: 6000;
      max-width: 100%;
      // Edges
      margin: 240px 0 40px 0;
      // Text
      color: {{ settings.hero_text_color }};
      font-weight: 400;
      font-size: 35px;
      letter-spacing: 0.5px;
      line-height: 1.1em;

      strong {
        color: $button-edge-color;
        font-weight: 500;
      }

    }

    p.copy {
      // Position
      display: block;
      z-index: 6000;
      color: white;
      font-weight: 400;
      letter-spacing: 0.5px;
      padding: 0px 38%;
      line-height: 22px;
      font-size: 19px;
    }

    button {
      display: block;
      // Edges
      border: 5px solid $button-edge-color;
      padding: 0 10px;
      // Text
      text-transform: uppercase;
      color: $button-edge-color;
      font-size: 2.6em;
      font-weight: 500;
    }
  }

  // Tablet Style
  @media (min-width: 769px) and (max-width: 1024px) {
    div.slide {
      p.copy {
        font-size: 1.1em;
      }
    }
  }

  // Mobile Style
  @media (min-width: 0px) and (max-width: 768px) {
    div.slide {
      // Position
      min-width: 320px;
      width: 100vw;
      // Background
      background-position-x: right;
      background-image: $banner-image-url-mobile;
      // Edges
      padding: 20px;
      h2.heading {
        // Position
        min-width: 220px;
        width: 220px;
        // Edges
        margin-top: 340px;
        margin-left: auto !important;
        margin-right: auto !important;
        // Text
        font-size: 2.0em;
      }
      p.copy {
        // Text
        font-size: 1.1em;
        // Edges
        margin-left: 0 !important;
        margin-right: 0 !important;
      }
      button {
        // Edges
        border: 3px solid $button-edge-color;
        // Text
        font-size: 1.5em;
        font-weight: 400;
        // Edges
        margin-left: 0 !important;
        margin-right: 0 !important;
      }
    }
  }
}
